{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@domains/*": ["domains/*"],
      "@domains": ["domains"],
      "@store/*": ["store/*"],
      "@store": ["store"],
      "@api/*": ["api/*"],
      "@api": ["api"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@views/*": ["views/*"],
      "@views": ["views"],
      "@layouts/*": ["layouts/*"],
      "@layouts": ["layouts"],
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@mock/*": ["mock/*"],
      "@mock": ["mock"],
      "@assets/*": ["assets/*"],
      "@assets": ["assets"]
    },
    "baseUrl": "app"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
